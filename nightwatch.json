{
  "src_folders" : ["tests"],
  "output_folder" : "reports",
  "custom_commands_path" : "extensions",
  "custom_assertions_path" : "",
  "page_objects_path" : "",

  "selenium" : {
    "start_process" : false,
    "server_path" : "",
    "log_path" : "",
    "port" : 4444
  },

  "test_settings" : {
    "default": {
      "launch_url": "http://web",
      "selenium_host": "hub",
      "desiredCapabilities": {
        "browserName": "chrome"
      },
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "path": "reports/screenshots"
      }
    },
    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args": [
            "start-maximized"
          ]
        }
      }
    },
    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "marionette": true
      }
    }
  }
}
